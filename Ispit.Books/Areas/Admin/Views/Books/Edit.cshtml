@model Ispit.Books.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                 <select class="form-select" name="AuthorId" aria-label="select example">
            @foreach(var autor in ViewBag.AuthorId) {
                  string is_selected = "";

                if(autor.Id==Model.AuthorId) {
                    
                        is_selected = "selected";
                  
                }
                <!option value="@autor.Id" @is_selected>@(autor.FirstName+" "+autor.LastName) </!option>
            }
            </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublisherId" class="control-label"></label>
                
            <select class="form-select" name="PublisherId" aria-label="select example">
            @foreach(var nakladnik in ViewBag.PublisherId) {
                  string is_selected = "";

                if(nakladnik.Id==Model.PublisherId) {
                    
                        is_selected = "selected";
                  
                }
                <!option value="@nakladnik.Id" @is_selected>@nakladnik.Title </!option>
            }
            </select>
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
