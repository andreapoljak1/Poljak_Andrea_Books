@model Ispit.Books.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
@if(ViewBag.BookMessage != null)
{
    <div class="alert alert-info">@ViewBag.ProductMessage</div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @if(ViewBag.Authors.Count > 0)
            {
                 <div class="form-group">
                    <label asp-for="AuthorId" class="control-label"></label>
                    <select name="AuthorId" class="form-control">
                        <option value="">Odaberi autora</option>
                
                        @foreach(var item in ViewBag.Authors)
                        {
                            <option value="@item.Id">@(item.FirstName + " "+item.LastName)</option>
                        }
                    </select>
                 </div>
            }
             @if(ViewBag.Publishers.Count > 0)
            {
                 <div class="form-group">
                    <label asp-for="PublisherId" class="control-label"></label>
                    <select name="PublisherId" class="form-control">
                        <option value="">Odaberi nakladnika</option>
                
                        @foreach(var item in ViewBag.Publishers)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                 </div>
            }
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
